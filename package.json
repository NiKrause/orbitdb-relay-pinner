{
  "name": "orbitdb-relay-pinner",
  "version": "0.1.3",
  "private": false,
  "type": "module",
  "description": "OrbitDB relay + pinning/sync service for Helia/libp2p stacks.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiKrause/orbitdb-relay-pinner.git"
  },
  "bugs": {
    "url": "https://github.com/NiKrause/orbitdb-relay-pinner/issues"
  },
  "homepage": "https://github.com/NiKrause/orbitdb-relay-pinner#readme",
  "keywords": [
    "orbitdb",
    "libp2p",
    "helia",
    "ipfs",
    "relay",
    "pinning"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "orbitdb-relay-pinner": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/add-shebang.mjs",
    "test": "npm run build && mocha --timeout 180000 \"test/**/*.test.mjs\"",
    "test:integration:relay-media": "npm run build && mocha --timeout 180000 \"test/relay-media-replication.test.mjs\"",
    "prepack": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.1",
    "@chainsafe/libp2p-noise": "^16.1.3",
    "@chainsafe/libp2p-yamux": "^7.0.1",
    "@ipshipyard/libp2p-auto-tls": "^1.0.0",
    "@libp2p/autonat": "^2.0.30",
    "@libp2p/circuit-relay-v2": "^3.2.11",
    "@libp2p/crypto": "^5.1.1",
    "@libp2p/identify": "^3.0.29",
    "@libp2p/keychain": "^5.2.1",
    "@libp2p/ping": "^2.0.29",
    "@libp2p/prometheus-metrics": "^4.3.18",
    "@libp2p/pubsub-peer-discovery": "^11.0.1",
    "@libp2p/tcp": "^10.1.10",
    "@libp2p/webrtc": "^5.2.12",
    "@libp2p/websockets": "^9.2.10",
    "@multiformats/multiaddr-matcher": "^1.7.0",
    "@orbitdb/core": "^3.0.2",
    "@orbitdb/identity-provider-did": "^1.0.2",
    "blockstore-level": "^2.0.1",
    "datastore-level": "^11.0.1",
    "dotenv": "^16.5.0",
    "helia": "^5.3.0",
    "interface-datastore": "^8.3.1",
    "p-queue": "^8.1.0",
    "prom-client": "^15.1.3",
    "uint8arrays": "^5.1.0",
    "key-did-resolver": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "mocha": "^11.7.2",
    "typescript": "^5.8.3"
  }
}
